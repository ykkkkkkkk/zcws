<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_row"
        android:layout_width="32dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="行号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_check"
        android:layout_width="@dimen/_38dp"
        android:layout_height="@dimen/_38dp"
        android:layout_marginLeft="@dimen/_2dp"
        android:layout_marginRight="@dimen/_2dp"
        android:background="@drawable/check_false"
        android:gravity="center" />


    <TextView
        android:id="@+id/tv_ckNo"
        android:layout_width="@dimen/_80dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="出库单号"
        android:textColor="@color/c_FF6600"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_curCarriageNo"
        android:layout_width="98dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="当前运单"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_allCarriageNo"
        android:layout_width="98dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="所有运单"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_nums"
        android:layout_width="@dimen/_60dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="数量"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_cust"
        android:layout_width="120dp"
        android:layout_height="@dimen/_46dp"
        android:layout_marginLeft="@dimen/_2dp"
        android:layout_marginRight="@dimen/_2dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="12sp" />

</LinearLayout>
