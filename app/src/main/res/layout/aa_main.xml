<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#6691D7">

        <Button
            android:id="@+id/btn_close"
            style="@style/btnClose"
            android:text="退出" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="操作员：王小二"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14sp" />

        <Button
            android:id="@+id/btn_print"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_4dp"
            android:background="@drawable/aa_ico5a_5b"
            android:ems="2"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_58dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/back_style_blue6"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2dp"
            android:layout_weight="1"
            android:background="@drawable/back_style_blue">

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_tabradio1_selector"
                android:button="@null"
                android:checked="true" />

            <TextView
                android:id="@+id/tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio1"
                android:layout_centerHorizontal="true"
                android:text="采购"
                android:textColor="@color/c_6a5acd"
                android:textSize="@dimen/_14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2dp"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_tabradio2_selector"
                android:button="@null"
                android:checked="false" />

            <TextView
                android:id="@+id/tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio2"
                android:layout_centerHorizontal="true"
                android:text="生产"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2dp"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_tabradio3_selector"
                android:button="@null"
                android:checked="false" />

            <TextView
                android:id="@+id/tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio3"
                android:layout_centerHorizontal="true"
                android:text="销售"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2dp"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/radio4"
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_tabradio4_selector"
                android:button="@null"
                android:checked="false" />

            <TextView
                android:id="@+id/tab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio4"
                android:layout_centerHorizontal="true"
                android:text="仓库"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2dp"
            android:visibility="gone"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/radio5"
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_tabradio6_selector"
                android:button="@null"
                android:checked="false" />

            <TextView
                android:id="@+id/tab5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio5"
                android:layout_centerHorizontal="true"
                android:text="图表"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2dp"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/radio6"
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_tabradio4_selector"
                android:button="@null"
                android:checked="false" />

            <TextView
                android:id="@+id/tab6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio6"
                android:layout_centerHorizontal="true"
                android:text="设置"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lin_tab"
        android:layout_below="@+id/relative_title"
        android:background="@color/white" />
</RelativeLayout>

