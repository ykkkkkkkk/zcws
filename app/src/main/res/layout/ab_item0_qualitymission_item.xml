<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lin_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_row"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="行号"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_fnumber"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="单据编号"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_mtlName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="物料名称"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_suppName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="供应商"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="@dimen/_45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="可检数"
            android:textColor="#000000"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_fqty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin_1"
        android:gravity="center"
        android:text="单据数："
        android:layout_toLeftOf="@+id/tv_checkedFqty"
        android:textColor="#666666"
        android:textSize="@dimen/_11sp" />

    <TextView
        android:id="@+id/tv_checkedFqty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin_1"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_toLeftOf="@+id/tv_qualifiedFqty"
        android:gravity="center"
        android:text="已检数："
        android:textColor="#666666"
        android:textSize="@dimen/_11sp" />

    <TextView
        android:id="@+id/tv_qualifiedFqty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin_1"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_toLeftOf="@+id/tv_unQualifiedFqty"
        android:gravity="center"
        android:text="合格数："
        android:textColor="#666666"
        android:textSize="@dimen/_11sp" />

    <TextView
        android:id="@+id/tv_unQualifiedFqty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin_1"
        android:layout_marginLeft="@dimen/_10dp"
        android:gravity="center"
        android:text="不良品："
        android:layout_marginRight="@dimen/_20dp"
        android:layout_alignRight="@+id/lin_1"
        android:textColor="#666666"
        android:textSize="@dimen/_11sp" />
</RelativeLayout>
