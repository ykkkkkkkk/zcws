<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_row"
        android:layout_width="32dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="行号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_mtlNumber"
        android:layout_width="76dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="物料代码"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_mtlName"
        android:layout_width="120dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center|left"
        android:text="物料名称"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_auxQty"
        android:layout_width="78dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="账存数"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_auxCheckQty"
        android:layout_width="68dp"
        android:layout_height="@dimen/_46dp"
        android:background="@drawable/back_style_blue2"
        android:gravity="center"
        android:text="盘点数"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_batchNo"
        android:layout_width="76dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="批次"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_fmode"
        android:layout_width="120dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="规格型号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_del"
        android:layout_width="@dimen/_46dp"
        android:layout_height="@dimen/_46dp"
        android:background="@drawable/ico_del"
        android:gravity="center" />


</LinearLayout>

