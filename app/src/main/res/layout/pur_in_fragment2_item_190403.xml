<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_row"
        android:layout_width="32dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="行号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_purNo"
        android:layout_width="65dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center|left"
        android:text="物料代码"
        android:textColor="#000000"
        android:textSize="@dimen/_12sp" />

    <TextView
        android:id="@+id/tv_mtlNo"
        android:layout_width="76dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center|left"
        android:text="物料代码"
        android:textColor="#000000"
        android:textSize="@dimen/_12sp" />

    <TextView
        android:id="@+id/tv_mtlName"
        android:layout_width="120dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center|left"
        android:text="物料名称"
        android:textColor="#000000"
        android:textSize="@dimen/_12sp" />

    <TextView
        android:id="@+id/tv_batch_seqNo"
        android:layout_width="76dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="批号\n序列号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_nums"
        android:layout_width="72dp"
        android:layout_height="@dimen/_46dp"
        android:background="@drawable/back_style_blue2"
        android:gravity="center"
        android:text="应收数\n实收数"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_stockAP"
        android:layout_width="120dp"
        android:layout_height="@dimen/_46dp"
        android:background="@drawable/back_style_blue2"
        android:gravity="center"
        android:hint="请选择仓库"
        android:textColor="#000000"
        android:textSize="@dimen/_12sp" />

    <TextView
        android:id="@+id/tv_delRow"
        android:layout_width="@dimen/_46dp"
        android:layout_height="@dimen/_46dp"
        android:background="@drawable/ico_del2"
        android:gravity="center" />


</LinearLayout>
