<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_getFocus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/back_style_blue"
        android:inputType="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_selectType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_style_blue"
            android:drawableRight="@drawable/xiala3"
            android:gravity="center"
            android:text="生产订单号（条码）"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_58dp"
        android:layout_margin="@dimen/_10dp"
        android:background="@drawable/back_style_blue"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:hint="请在此扫码"
            android:inputType="none"
            android:maxLength="30"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/btn_scan_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_big"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_purple1a"
            android:gravity="center"
            android:text="大标签✔"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_small"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_20dp"
            android:background="@drawable/back_style_gray3"
            android:gravity="center"
            android:text="小标签"
            android:textColor="#666666"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
