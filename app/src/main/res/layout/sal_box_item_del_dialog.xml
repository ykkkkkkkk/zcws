<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10dp"
    android:background="@drawable/back_style_gray"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_6dp"
        android:gravity="center"
        android:text="扫码删除"
        android:textColor="#000000"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/et_mtlCodeTmp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="none" />

    <EditText
        android:id="@+id/et_mtlCode2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38dp"
        android:layout_margin="@dimen/_10dp"
        android:layout_weight="1"
        android:background="@drawable/back_style_blue"
        android:hint="请在此扫描物料条码完成删除"
        android:inputType="none"
        android:paddingLeft="2dp"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sp" />

    <CheckBox
        android:id="@+id/check_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6dp"
        android:checked="true"
        android:text="扫码之后关闭窗口" />

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38dp"
        android:layout_margin="@dimen/_10dp"
        android:background="@drawable/btn_gray1_selector"
        android:gravity="center"
        android:text="关闭"
        android:textColor="#666666"
        android:textSize="14sp" />

</LinearLayout>
