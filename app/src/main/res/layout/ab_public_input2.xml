<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/back_style_gray"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_blue_selector"
            android:gravity="center"
            android:text="关闭"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_hintName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="批号和序列号"
            android:textColor="#666666"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_blue_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="20dp"
        android:background="@drawable/back_style_blue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_itemName"
            android:layout_width="@dimen/_78dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="批号"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="@dimen/_0.5dp"
            android:layout_height="match_parent"
            android:background="@color/public_blue" />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:inputType="none"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:background="@drawable/edit_del"
            android:gravity="center"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="@dimen/_20dp"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:background="@drawable/back_style_blue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_itemName2"
            android:layout_width="@dimen/_78dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="序列号"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="@dimen/_0.5dp"
            android:layout_height="match_parent"
            android:background="@color/public_blue" />

        <EditText
            android:id="@+id/et_input2"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:inputType="none"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_clear2"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:background="@drawable/edit_del"
            android:gravity="center"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="占位占位占位占位占位占位占位占位占位占位占位占位占位占位占位"
        android:visibility="invisible" />

</LinearLayout>