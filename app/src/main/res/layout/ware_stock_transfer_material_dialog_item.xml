<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_row"
        android:layout_width="32dp"
        android:layout_height="@dimen/_42sp"
        android:gravity="center"
        android:text="行号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_fnumber"
        android:layout_width="@dimen/_78dp"
        android:layout_height="@dimen/_42sp"
        android:gravity="center|left"
        android:padding="@dimen/_2dp"
        android:text="物料代码"
        android:textColor="#000000"
        android:textSize="12sp" />

    <View
        android:layout_width="@dimen/_1dp"
        android:layout_height="@dimen/_42sp"
        android:background="@drawable/back_style_gray_line_right" />

    <TextView
        android:id="@+id/tv_fname"
        android:layout_width="0dp"
        android:layout_height="@dimen/_42sp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:padding="@dimen/_2dp"
        android:text="物料名称"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_stockQty"
        android:layout_width="@dimen/_58dp"
        android:layout_height="@dimen/_42sp"
        android:gravity="center"
        android:text="库存"
        android:textColor="#000000"
        android:textSize="12sp" />

</LinearLayout>
