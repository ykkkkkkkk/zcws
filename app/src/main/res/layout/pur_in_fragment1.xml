<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_getFocus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="none" />

    <LinearLayout
        android:id="@+id/lin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="@dimen/_6dp"
            android:layout_marginRight="@dimen/_6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="2"
                android:gravity="center"
                android:text="单据类型"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_orderTypeSel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:drawableRight="@drawable/xiala3"
                android:gravity="center"
                android:text="标准采购入库"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_3dp"
                android:ems="2"
                android:gravity="center"
                android:text="业务类型"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_operationTypeSel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:drawableRight="@drawable/xiala3"
                android:gravity="center"
                android:text="标准采购"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_margin="@dimen/_6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="2"
                android:gravity="center"
                android:text="供应商"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_supplierSel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:drawableRight="@drawable/xiala3"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_3dp"
                android:ems="2"
                android:gravity="center"
                android:text="入库日期"
                android:textColor="#000000"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_purDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:drawableRight="@drawable/xiala3"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="@dimen/_6dp"
            android:layout_marginLeft="@dimen/_6dp"
            android:layout_marginRight="@dimen/_6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_smName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="2"
                android:gravity="center"
                android:text="物料代码"
                android:textColor="#000000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_mtlNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="物料扫码区"
                    android:inputType="none"
                    android:paddingLeft="@dimen/_2dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

                <Button
                    android:id="@+id/btn_scan"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/btn_scan_selector" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="@dimen/_6dp"
            android:layout_marginRight="@dimen/_6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="2"
                android:gravity="center"
                android:text="收料组织"
                android:textColor="#000000"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_receiveOrg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:drawableRight="@drawable/xiala3"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:ems="2"
                android:gravity="center"
                android:text="采购组织"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_purOrg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:drawableRight="@drawable/xiala3"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_margin="@dimen/_6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="2"
                android:gravity="center"
                android:text="采购员"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_purMan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:drawableRight="@drawable/xiala3"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_3dp"
                android:ems="2"
                android:gravity="center"
                android:text="部门"
                android:textColor="#000000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_deptName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/back_style_blue4"
                    android:inputType="none"
                    android:paddingLeft="2dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sp" />

                <Button
                    android:id="@+id/btn_deptName"
                    android:layout_width="@dimen/_38dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_blue3_selector"
                    android:text="▼"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_rowTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25dp"
                android:background="#D8D8D8">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="行号"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="物料代码"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="物料名称"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="批号/序列号"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="应收/实收数"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="仓库/库位"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="@dimen/_42dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="删除行"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12sp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scrollbars="none" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_clone"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_gray2_selector"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/c_515151"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_batchAdd"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_gray2_selector"
            android:gravity="center"
            android:text="批量填充"
            android:textColor="@color/c_515151"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_pass"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/btn_purple2_selector"
            android:gravity="center"
            android:text="审核"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
