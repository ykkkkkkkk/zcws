<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_row"
        android:layout_width="32dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="行号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_fnumber"
        android:layout_width="65dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="订单编号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_mtlName"
        android:layout_width="0dp"
        android:layout_height="@dimen/_46dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="物料名称"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_suppName"
        android:layout_width="0dp"
        android:layout_height="@dimen/_46dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="供应商"
        android:textColor="@color/c_FF4400"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_nums"
        android:layout_width="@dimen/_45dp"
        android:layout_height="@dimen/_46dp"
        android:background="@drawable/back_style_blue2"
        android:gravity="center"
        android:text="订单数\n入库数"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_check"
        android:layout_width="@dimen/_36dp"
        android:layout_height="@dimen/_36dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/check_false"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="#000000"
        android:textSize="12sp" />


</LinearLayout>
