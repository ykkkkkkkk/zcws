<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|left"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_row"
        android:layout_width="32dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="行号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_check"
        android:layout_width="@dimen/_38dp"
        android:layout_height="@dimen/_38dp"
        android:layout_marginLeft="@dimen/_2dp"
        android:layout_marginRight="@dimen/_2dp"
        android:background="@drawable/check_false"
        android:gravity="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_sourceNo"
        android:layout_width="0dp"
        android:layout_height="@dimen/_46dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="调拨单"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sp" />

    <TextView
        android:id="@+id/tv_nums"
        android:layout_width="0dp"
        android:layout_height="@dimen/_46dp"
        android:layout_weight="1"
        android:background="@drawable/back_style_blue2"
        android:gravity="center"
        android:text="调拨数"
        android:textColor="@color/black"
        android:textSize="12sp" />

</LinearLayout>
