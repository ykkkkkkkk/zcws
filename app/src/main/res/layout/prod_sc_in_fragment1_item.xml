<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_row"
        android:layout_width="32dp"
        android:layout_height="@dimen/_46dp"
        android:background="@drawable/back_style_gray_line_right"
        android:gravity="center"
        android:text="行号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_orderNo"
        android:layout_width="76dp"
        android:layout_height="@dimen/_46dp"
        android:background="@drawable/back_style_gray_line_right"
        android:gravity="center"
        android:paddingLeft="@dimen/_2dp"
        android:paddingRight="@dimen/_2dp"
        android:text="生产单号"
        android:textColor="#000000"
        android:textSize="@dimen/_11sp" />

    <TextView
        android:id="@+id/tv_mtlName"
        android:layout_width="120dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center|left"
        android:paddingLeft="@dimen/_2dp"
        android:paddingRight="@dimen/_2dp"
        android:text="物料名称"
        android:textColor="#000000"
        android:textSize="@dimen/_11sp" />

    <TextView
        android:id="@+id/tv_prodNum"
        android:layout_width="58dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="生产数"
        android:textColor="#000000"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tv_nums"
        android:layout_width="68dp"
        android:layout_height="@dimen/_46dp"
        android:background="@drawable/back_style_blue2"
        android:gravity="center"
        android:paddingLeft="@dimen/_2dp"
        android:paddingRight="@dimen/_2dp"
        android:text="生产/入库数"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_stockAP"
        android:layout_width="100dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="12sp" />

</LinearLayout>
