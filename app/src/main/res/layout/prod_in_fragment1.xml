<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_getFocus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="none" />

    <LinearLayout
        android:id="@+id/lin_tabs"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/viewRadio1"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:background="@drawable/check_on" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="无源单"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/viewRadio2"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:background="@drawable/check_off2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="有源单"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin_div2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="@dimen/_6dp"
            android:layout_marginRight="@dimen/_6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="2"
                android:gravity="center"
                android:text="生产车间"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_deptSel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:drawableRight="@drawable/xiala3"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:ems="2"
                android:gravity="center"
                android:text="来源单"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sourceNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:drawableRight="@drawable/xiala3"
                android:inputType="none"
                android:paddingLeft="2dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_div1"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="@dimen/_6dp"
            android:layout_marginRight="@dimen/_6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="2"
                android:gravity="center"
                android:text="物料条码"
                android:textColor="#000000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:gravity="center"
                android:orientation="horizontal">

            <EditText
                android:id="@+id/et_mtlCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="请在此扫描物料条码"
                android:inputType="none"
                android:paddingLeft="2dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sp" />

                <Button
                    android:id="@+id/btn_scan"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/btn_scan_selector" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_margin="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="2"
                android:gravity="center"
                android:text="入库组织"
                android:textColor="#000000"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_inOrg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:drawableRight="@drawable/xiala3"
                android:gravity="center"
                android:text="河南工厂"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:ems="2"
                android:gravity="center"
                android:text="生产组织"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_prodOrg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:drawableRight="@drawable/xiala3"
                android:gravity="center"
                android:text="河南工厂"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="@dimen/_6dp"
            android:layout_marginLeft="@dimen/_6dp"
            android:layout_marginRight="@dimen/_6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="2"
                android:gravity="center"
                android:text="仓管员"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_prodMan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:drawableRight="@drawable/xiala3"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:ems="2"
                android:gravity="center"
                android:text="车间"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_deptName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back_style_blue"
                android:drawableRight="@drawable/xiala3"
                android:inputType="none"
                android:paddingLeft="2dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sp" />


        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_rowTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_33dp"
                android:background="#D8D8D8">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="行号"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="物料代码"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="196dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="物料名称"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="应收/实收数"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_canStockNum"
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="当前库存"
                    android:textColor="#0206ff"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="仓库/库位"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="批号/序列号"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="@dimen/_46dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="删除行"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12sp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scrollbars="none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30dp"
                android:background="@drawable/back_style_blue5">

                <TextView
                    android:layout_width="86dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="条码个数："
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_smCountNum"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="0"
                    android:textColor="@color/c_FF4400"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="合计："
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_countSum"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/c_FF4400"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="299dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="仓库\n库位"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_clone"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_gray2_selector"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/c_515151"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_batchAdd"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_gray2_selector"
            android:gravity="center"
            android:text="批量填充"
            android:textColor="@color/c_515151"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_print"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_purple2_selector"
            android:gravity="center"
            android:text="打印"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_pass"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="审核"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
