<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_row"
        android:layout_width="32dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="行号"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_check"
        android:layout_width="@dimen/_38dp"
        android:layout_height="@dimen/_38dp"
        android:layout_marginLeft="@dimen/_2dp"
        android:layout_marginRight="@dimen/_2dp"
        android:background="@drawable/check_false"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_prodOrderNo"
        android:layout_width="68dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="生产订单"
        android:textColor="#000000"
        android:textSize="@dimen/_12sp" />

    <TextView
        android:id="@+id/tv_mtlNo"
        android:layout_width="76dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center|left"
        android:visibility="gone"
        android:text="物料代码"
        android:textColor="#000000"
        android:textSize="@dimen/_11sp" />

    <TextView
        android:id="@+id/tv_mtlName"
        android:layout_width="196dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center|left"
        android:text="物料名称"
        android:textColor="#000000"
        android:textSize="@dimen/_11sp" />

    <TextView
        android:id="@+id/tv_nums"
        android:layout_width="72dp"
        android:layout_height="@dimen/_46dp"
        android:background="@drawable/back_style_gray8"
        android:gravity="center"
        android:text="数量"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_deliWay"
        android:layout_width="68dp"
        android:layout_height="@dimen/_46dp"
        android:gravity="center"
        android:text="交货方式"
        android:textColor="#000000"
        android:textSize="12sp" />

</LinearLayout>
